# https://github.com/jreese/arch

pkgname=ttf-input
pkgver=20140812
pkgrel=1
pkgdesc="A flexible system of fonts designed specifically for code"
arch=('any')
url="http://input.fontbureau.com/"
license=('custom')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf-input.install
source=("input-font.zip::http://input.fontbureau.com/build/?fontSelection=whole&a=0&g=0&i=0&l=0&zero=0&asterisk=0&presets=input&lineHeight=1&accept=I+do&email=")
sha256sums=('07e6ad61517b268f92b2d9e86d003ed7bed23fcf218089ad0ca591bff9bbd8a2')

package() {
    for f in $(find . -name '*.ttf'); do
        install -Dm644 "$f" "$pkgdir/usr/share/fonts/TTF/$(basename $f)"
    done

	install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
	install -Dm644 README.txt "$pkgdir/usr/share/doc/$pkgname/README.txt"
	install -Dm644 INSTALL.txt "$pkgdir/usr/share/doc/$pkgname/INSTALL.txt"
}

