# Contributor: killhellokitty <killhellokitty.deviantart.com>
# Maintainer: killhellokitty <killhellokitty.deviantart.com>

pkgname=delorean-dark-theme-3.6
pkgver=2.56
pkgrel=3
pkgdesc="The Dark Brushed-Metal Theme for gtk3, gtk2, metacity, gnome-shell, cinnamon, xfwm4 & openbox"
arch=('any')
url="http://fav.me/d5fslhj"
license=('GPL''Creative Commons NC SA')
depends=('gtk-engines' 'gnome-themes-standard>=3.6.0' 'gtk-engine-murrine>=0.98.2')
_downloadLink=`curl -c cookies --silent http://killhellokitty.deviantart.com/art/DeLorean-Dark-Theme-3-6-vs-2-56-328859335 | grep download-button | sed -sre 's/^.*href="([^\"]+).*$/\1/' | sed -se 's/\&amp;/\&/g'`
source=("${pkgname}-${pkgver}.zip::${_downloadLink}")
_fname=`echo "${_downloadLink}" | sed -sre 's/^.+\/([^/]+)$/\1/'`
DLAGENTS=("http::/usr/bin/curl -fLC - -b cookies -o '${_fname}'")

replaces=('delorean-dark-theme--dev-gnome3.6' 'delorean-dark[development]')
conflicts=('delorean-dark-theme--dev-gnome3.6' 'delorean-dark[development]')
md5sums=('d58f18d7fdf836f7aa8ad7ae53aad628')


package() {
  # install themes
  find delorean-dark-theme-3.6/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

