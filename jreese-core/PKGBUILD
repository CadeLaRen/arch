build() {
  install -Dm644 $srcdir/${source[0]} $pkgdir/usr/share/kbd/keymaps/i386/dvorak/${source[0]}
  install -Dm644 $srcdir/${source[1]} $pkgdir/etc/modprobe.d/${source[1]}
}

check() {
  true
}

